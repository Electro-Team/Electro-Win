<UserControl x:Class="Electro.UI.Views.MainElectroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Electro.UI.Views"
             xmlns:ui="clr-namespace:Electro.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="DNS"
                     BorderThickness="0"
                     IsEnabled="{Binding RelativeSource={RelativeSource AncestorType=local:MainElectroControl}, 
                    Path=DataContext.IsServiceOn, Converter={StaticResource InvertBooleanConverter},
                                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <local:DNSControl DataContext="{Binding DnsViewModel}"/>
            </TabItem>
            <TabItem Header="Open VPN"
                     IsEnabled="{Binding RelativeSource={RelativeSource AncestorType=local:MainElectroControl}, 
                    Path=DataContext.IsServiceOn, Converter={StaticResource InvertBooleanConverter},
                                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
